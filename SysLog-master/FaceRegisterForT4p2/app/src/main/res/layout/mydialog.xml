<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0000000"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/mydialog_layout"
        android:layout_width="400dip"
        android:layout_height="wrap_content"
        android:background="@drawable/yuwei_shape"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mydialog_title"
            style="@style/textview_dialog_title_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="60dip"
            android:paddingBottom="10dip"
            android:paddingTop="10dip" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="#4889db" />

        <TextView
            android:id="@+id/mydialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="45dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="45dip"
            android:textColor="#000000"
            android:textSize="@dimen/font_size_32" />

        <LinearLayout
            android:id="@+id/mydialog_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="10dip"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mydialog_divider"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#b0b0b0" />

        <LinearLayout
            android:id="@+id/mydialog_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mydialog_cancel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yuwei_buttonclick_left"
                android:gravity="center"
                android:paddingBottom="20dip"
                android:paddingTop="20dip"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_35" />

            <ImageView
                android:id="@+id/divider_line"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#b0b0b0" />

            <TextView
                android:id="@+id/mydialog_ok"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yuwei_buttonclick_right"
                android:gravity="center"
                android:paddingBottom="20dip"
                android:paddingTop="20dip"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_35" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>